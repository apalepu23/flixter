<br />
<div class="place-box col-xs-10 col-xs-offset-1">
	<h1 class="text-center"><%= current_course.title %></h1>
	<br />

	<div class="text-center">
		<%= link_to "Preview as student...", course_path(current_course), :class => "btn btn-warning pull-right" %>

		<%= link_to "Add a new section...", new_instructor_course_section_path(current_course), :class => "btn btn-primary btn-lg" %>
		<%= image_tag current_course.image, :class => "img-responsive pull-left" %>
	</div>

	<ul>
		<% current_course.sections.each do |section| %>
			<li>
				<%= section.title %>
				<%= link_to "New Lesson", new_instructor_section_lesson_path(section), :class => "pull-right btn btn-primary" %>
				<ul>
					<% section.lessons.each do |lesson| %>
						<li>
							<b><%= lesson.title %></b>
							-
							<%= lesson.subtitle %>
						</li>
					<% end %>
				</ul>
				<br class="clr" />
			</li>
		<% end %>
	</ul>
</div>